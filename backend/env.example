# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration - MongoDB Atlas (Primary)
MONGODB_URI_ATLAS=mongodb+srv://username:password@cluster.mongodb.net/greenh2_credits

# Database Configuration - Local Fallback (Optional)
MONGODB_URI=mongodb://localhost:27017/greenh2_credits

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_REFRESH_EXPIRES_IN=30d

# Cookie Configuration
COOKIE_SECRET=your-cookie-secret-key-here
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=lax

# Blockchain Configuration
BLOCKCHAIN_NETWORK=localhost
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_CHAIN_ID=1337

# Contract Addresses
HYDROGEN_CREDITS_CONTRACT=0x...
TRADE_MARKETPLACE_CONTRACT=0x...
VERIFICATION_CONTRACT=0x...

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# External Services (Optional)
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
